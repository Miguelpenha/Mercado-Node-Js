<body>
    {{#if primario_msg}}
        <div class="alert alert-primary" role="alert">{{primario_msg}}</div>
    {{else}}
    {{/if}}
    {{#if erro_msg}}
        <div class="alert alert-danger" role="alert">{{erro_msg}}</div>
    {{else}}
    {{/if}}
