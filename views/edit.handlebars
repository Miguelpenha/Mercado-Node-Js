{{#if exclu}}
    <style>
        .req{
            color: #d93025;
            margin-right: 2px;
        }

        .campo {
            width: 50%;
            display: inline-block;
            box-sizing: border-box;
        }

        .campo input{
            padding: 12px 20px;
            width: 100%;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            transition-timing-function: linear;
            transition-duration: 0.1s;
        }

        .campo input[type=text]:focus {
            box-shadow: 0 0 0 0;
            outline: 0;
            border: 1px solid#0974ff;
        }

        .campo {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        form {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            width: 80%;
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 2%;
            margin-bottom: 5%;
        }

        .btns {
            width: 100%;
        }

        input[type=submit] {
            width: 43%;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            padding: 1%;
            margin-left: 4.5%;
        }
    </style>
{{else}}
    <style>
        .req{
            color: #d93025;
            margin-right: 2px;
        }

        .campo {
            width: 50%;
            display: inline-block;
            box-sizing: border-box;
            min-width: 100%;
        }

        .campo input{
            padding: 12px 20px;
            width: 100%;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            transition-timing-function: linear;
            transition-duration: 0.1s;
        }

        .campo input[type=text]:focus {
            box-shadow: 0 0 0 0;
            outline: 0;
            border: 1px solid#0974ff;
        }

        .btn-solo {
            width: 40%;
            display: block;
            margin-right: auto;
            margin-left: auto;
        }

        .btn-solo input[type=submit] {
            width: 43%;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            display: block;
            margin-right: auto;
            margin-left: auto;
            min-width: 100%;
        }

        .campo {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        form {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            width: 80%;
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 2%;
            margin-bottom: 5%;
        }

        .campo-jt-1{
            width: 100%;
            display: inline-block;
            box-sizing: border-box;
        }

        .campo-jt-1 .campo-jt {
            width: 48%;
            display: block;
            margin-left: 1.3%;
            float: left;
        }
        .campo-jt-1 .campo-jt input {
            padding: 12px 20px;
            width: 100%;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            transition-timing-function: linear;
            transition-duration: 0.1s;
        }

        .campo-jt-1 .campo-jt input:focus {
            box-shadow: 0 0 0 0;
            outline: 0;
            border: 1px solid#0974ff;
        }
    </style>
{{/if}}

<form method="POST" action="/edit-veri" id="form">
    <br>
    <div class="campo-jt-1">
        <div class="campo-jt">
            <label for="estado" class="txt">Estado: </label><span class="req">*</span><br><input required value="{{estado}}" type="text" id="estado" placeholder="Estado" name="estado"/>
        </div>
        <div class="campo-jt">
            <label for="cidade" class="txt">Cidade: </label><span class="req">*</span><br><input required value="{{cidade}}" type="text" id="cidade" placeholder="Cidade" name="cidade"/>
        </div>
    </div>
    <br>
    <div class="campo-jt-1">
        <div class="campo-jt">
            <label for="bairro" class="txt">Bairro: </label><span class="req">*</span><br><input required value="{{bairro}}" type="text" id="bairro" placeholder="Bairro" name="bairro"/>
        </div>
        <div class="campo-jt">
            <label for="rua" class="txt">Rua: </label><span class="req">*</span><br><input required value="{{rua}}" type="text" id="rua" placeholder="Rua" name="rua"/>
        </div>
    </div>
    <br>
    <div class="campo-jt-1">
        <div class="campo-jt">
            <label for="numero-da-casa" class="txt">Número Da Casa: </label><span class="req">*</span><br><input required type="text" id="num" placeholder="Número Da Casa" name="num" value="{{num}}"/>
        </div>
        <div class="campo-jt">
            <label for="complemento-ou-referencia" class="txt">Complemento Ou Referência: </label><br><input type="text" id="comple" placeholder="Complemento Ou Referência" name="comple" value="{{comple}}">
        </div>
    </div>
    <br>
    <br>
    {{#if exclu}}
        <div class="btns">
            <input type="submit" value="Enviar" id="enviar" class="btn btn-primary">
            <input type="submit" value="Excluir" id="excluir" onclick="veri2()" class="btn btn-danger">
        </div>
    {{else}}
        <div class="btn-solo">
            <input type="submit" value="Enviar" id="enviar" class="btn btn-primary">
        </div>
    {{/if}}
</form>
<script>
    function veri2() {
        var form = window.document.getElementById('form')
        form.action = '/loca-delete'
    }
</script>