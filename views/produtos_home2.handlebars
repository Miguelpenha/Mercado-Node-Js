<style>
    html, body {
        height: 100%;
    }

    .pt-prin-1 {
        width: 65%;
        border-bottom: 1px solid #f2f2f2;
        box-shadow: 0px 1px 4px rgb(0 0 0 / 5%);
        height: 100%;
    }

    .pt-prin-2 {
        width: 35.8%;
        border: 1px solid #f2f2f2;
        box-shadow: 0px 1px 4px rgb(0 0 0 / 5%);
        height: 100%;
        background-color: white;
        position: fixed;
        margin-left: 64.5%;
    }
    
    .tit-prin {
        font-size: 2.5em;
        text-decoration: underline #0974ff;
        text-align: center;
        border-bottom: 1px solid #f2f2f2;
        box-shadow: 0px 1px 4px rgb(0 0 0 / 5%);
        height: 10%;
    }

    .tit-menu {
        border: 1px solid #f2f2f2;
        box-shadow: 0px 1px 4px rgb(0 0 0 / 5%);
        height: 10%;
    }

    .loca {
        border: 0;
        background-color: transparent;
        transition-timing-function: linear;
        transition-duration: 0.1s;
    }

    .main {
        height: 90%;
        padding-left: 5%;
        padding-right: 5%;
        margin-top: 10%;
    }

    .cx {
        float: left;
        width: 15.6%;
        margin-left: 1%;
        height: 36%;
        border: 1px solid #f2f2f2;
        box-shadow: 0px 1px 4px rgb(0 0 0 / 5%);
        padding: 1%;
        background-color: white;
        margin-top: 1%;
    }

    .cx-2 {
        float: left;
        width: 15.6%;
        margin-left: 1%;
        height: 36%;
        border: 1px solid #f2f2f2;
        box-shadow: 0px 1px 4px rgb(0 0 0 / 5%);
        background-color: white;
    }

    .img-food {
        width: 100%;
        display: inline-block;
        margin-left: auto;
        margin-right: auto;
    }

    .preco-food {
        font-size: 1.3vw;
        font-weight: bold;
        color: #3E3E3E;
        display: inline-block;
        width: 100%;
    }

    .desc-food {
        width: 100%;
        display: inline-block;
        color: #3E3E3E;
        font-size: 0.9vw;
    }

    .peso-food {
        width: 100%;
        display: inline-block;
        color: #717171;
        font-size: 0.8vw;
    }

    .mais {
        display: inline-block;
        text-align: center;
        margin-top: 2%;
    }

    .mais-a {
        cursor: pointer;
    }

    .produtos {
        display: inline-block;
    }

    .cx-produto {
        width: 50%;
        height: 80%;
        background-color: white;
        position: fixed;
        margin-top: 5%;
        margin-left: 8%;
        visibility: hidden;
        border: 1px solid #f2f2f2;
        box-shadow: 0px 1px 4px rgb(0 0 0 / 5%);
        border-radius: 8px;
    }

    .cx-produto-x {
        margin-left: 90%;
        width: 5%;
    }
</style>
<div class="row pt-prin-1" style="float: left;" id="geral">
    <div class="col-sm-12 tit-prin">
        <form method="POST" action="/veri-edit-exclu" id="form_dele"> 
            <button type="submit" class="loca">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                </svg>
            </button>
            <span style="margin-top: 0%;">Todos Os Nossos Produtos</span>
        </form>
    </div>
    <main class="col-sm-12 main">
        <div class="col-sm-12 produtos">
            {{#each produtos}}
            {{#if this.col1}}
                <div class="col-sm-12 cx-2">
                    <img src="{{this.img}}" alt="{{this.desc}}" class="img-food" id="img-pro-{{this.id}}">
                    <span class="preco-food">{{this.preco}}</span>
                    <span class="desc-food" id="desc-food-{{this.id}}">{{this.desc}}</span>
                    <span class="peso-food" id="peso-food-{{this.id}}">{{this.peso}}</span>
                </div>
            {{else}}
                <div class="col-sm-12 cx">
                    <img src="{{this.img}}" alt="{{this.desc}}" class="img-food" id="img-pro-{{this.id}}">
                    <span class="preco-food">{{this.preco}}</span>
                    <span class="desc-food" id="desc-food-{{this.id}}">{{this.desc}}</span>
                    <span class="peso-food" id="peso-food-{{this.id}}">{{this.peso}}</span>
                </div>
            {{/if}}
        {{else}}

        {{/each}}
        </div>

        {{#if ultimo}}
            <div class="col-sm-12 mais">
                <a class="mais-a" id="mais" onclick="mostrar()">Ver Todos Os Produtos>></a>
            </div>
        {{else}}
            
        {{/if}}
    </main>
</div>
<div class="col-sm-8 cx-produto" id="cx-produto">
    asd
    <a onclick="fechar()" style="cursor: pointer;">
        <img src="/img/x.svg" alt="" class="cx-produto-x">
    </a>
</div>
<div class="row pt-prin-2" style="float: right;" id="pt-prin-2">
    <div class="col-sm-12 tit-menu">
        asd
    </div>
</div>
<script>
    function mostrar() {
        var cx_produto = window.document.getElementById('cx-produto')
        var geral = window.document.getElementById('geral')
        window.document.body.style.overflowY = 'hidden'
        window.document.body.style.pointerEvents = 'none'
        cx_produto.style.visibility = 'visible'
        cx_produto.style.pointerEvents = 'visible'
        geral.style.filter = 'blur(5px)'
        var pt_prin_2 = window.document.getElementById('pt-prin-2')
        pt_prin_2.style.pointerEvents = 'visible'
    }

    function fechar() {
        var cx_produto = window.document.getElementById('cx-produto')
        var geral = window.document.getElementById('geral')
        window.document.body.style.overflowY = 'auto'
        window.document.body.style.pointerEvents = 'visible'
        cx_produto.style.visibility = 'hidden'
        cx_produto.style.pointerEvents = 'hidden'
        geral.style.filter = ''
    }
</script>