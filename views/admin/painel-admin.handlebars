<style>
    .produto {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
        margin-top: 2%;
        width: 30%;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .btns {
        width: 100%;
        display: inline-block;
    }

    .btns input[type=submit]{
        width: 40%;
        float: left;
        margin-left: 7%;
        min-width: 40%;
    }

    .produtos {
        width: 80%;
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 6%;
    }

    .nome-food {
        width: 100%;
        font-size: 1.8em;
        min-width: 100%;
    }

    .num-food {
        width: 75%;
        font-size: 1.2em;
    }

    .btn {
        font-size: 1em;
    }

    .cx {
        width: 100%;
    }

    .btn-p {
        margin-left: 1%;
    }

    .tit {
        margin-left: 1%;
    }

    .txt-food {
        display: inline-block;
        width: 100%;
    }
</style>
<div class="cx">
    <span>
        <h1 class="tit">Painel Admin</h1>
        <form action="/admin/envi" method="get" class="form">
            <button class="btn btn-success btn-p" type="submit">Cadastrar Produto</button>
        </form>
        <br>
        <form action="/admin/cls-login" method="get" class="form">
            <button class="btn btn-danger btn-p" type="submit">Deletar Todos Os Produtos</button>
        </form>
    </span>
    <div class="produtos">
    {{#each produtos}}
        <div class="produto">
            <span class="txt-food">
                <h4 class="nome-food">Nome: {{this.produto.nome}}</h4>
                <h5 class="num-food">Número De Vendas: {{this.produto.vendas}}</h5>
            </span>
            <br>
            <br>
            <div class="btns">
                <form action="/admin/exclu-produto" method="POST">
                    <input type="hidden" name="id" id="id" value="{{this.produto.id}}">
                    <input type="submit" class="btn btn-danger" value="Excluir Produto">
                </form>
                <form action="/admin/envi?edit=true&id={{this.produto.id}}" method="GET">
                    <input type="hidden" name="id" id="id" value="{{this.produto.id}}">
                    <input type="submit" class="btn btn-primary" value="Editar Produto"/>
                </form>
            </div>
        </div>
    {{else}}
        <h3 class="tit-nt">Ainda Não Há Produtos Cadastrados :(</h3>
    {{/each}}
</div>
</div>