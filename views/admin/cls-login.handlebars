<style>
    .req{
        color: #d93025;
    }

    .campo {
        width: 50%;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        transition-timing-function: linear;
        transition-duration: 0.1s;
    }

    input[type=password]:focus {
        box-shadow: 0 0 0 0;
        outline: 0;
        border: 1px solid #0974ff;
    }

    input[type=submit] {
        width: 60%;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    #form {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
        width: 50%;
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 2%;
    }
</style>
<form method="post" action="/admin/cls" id="form">
<input type="hidden" name="login" id="login" value="{{login}}">
    <input type="hidden" name="api" id="api" value="false">
    <div class="campo">
        <label for="senha-de-acesso">Senha de Acesso: </label><span class="req">*</span>
        <br>
        <input type="password" name="senha" id="senha" autocomplete="current-password" required>
    </div>
    <br>
    <input type="submit" value="Enviar" id="bt" class="btn btn-primary"/>
</form>