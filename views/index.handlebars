<style>
    #cep {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        transition-timing-function: linear;
        transition-duration: 0.1s;
    }

    #cep:focus {
        box-shadow: 0 0 0 0;
        outline: 0;
        border: 1px solid #0974ff;
    }

    #enviar {
        width: 50%;
        background-color: #0974ff;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition-timing-function: linear;
        -o-transition-duration: 0.1s;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    #enviar:hover {
        background-color: #1273f1;
    }

    #form {
        transition-timing-function: linear;
        -o-transition-duration: 0.1s;
        width: 50%;
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
        margin-top: 1%;
        margin-left: auto;
        margin-right: auto;
    }
</style>
{{#if erro}}
    <div class="alert alert-danger" role="alert" id="erro">{{erro}}</div>
{{else}}

{{/if}}
<form method="POST" action="/veri?cep=true" id="form">
    <input type="text" id="cep" name="cep" placeholder="Digite seu CEP">
    <input type="submit" value="Enviar" id="enviar"/>
